                        android:textSize="14sp"
                        app:backgroundTint="@color/accent_teal"
                        android:textColor="@color/white"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

                <!-- Bouton accÃ¨s fichier -->
                <com.google.android.material.button.MaterialButton
