<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Navigation entre plats multiples -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_meal_prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Plat précédent"
            app:icon="@drawable/ic_arrow_left_24"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="24dp" />

        <TextView
            android:id="@+id/dialog_meal_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_meal_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Plat suivant"
            app:icon="@drawable/ic_arrow_right_24"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Première ligne : Supprimer et Modifier -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_meal_delete"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/meal_action_delete"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:gravity="center"
                app:icon="@drawable/ic_delete_24"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:backgroundTint="@color/error_color"
                app:cornerRadius="27dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_meal_change"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/meal_action_change"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:gravity="center"
                app:icon="@drawable/ic_edit_24"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:backgroundTint="@color/primary_blue"
                app:cornerRadius="27dp" />

        </LinearLayout>

        <!-- Deuxième ligne : Voir recette et Ajouter un autre -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_meal_view_recipe"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/meal_action_view_recipe"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:gravity="center"
                app:icon="@drawable/ic_recipe_24"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:backgroundTint="@color/secondary_green"
                app:cornerRadius="27dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_meal_add_another"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/meal_action_add_another"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:gravity="center"
                app:icon="@drawable/ic_add_24"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:backgroundTint="@color/success_color"
                app:cornerRadius="27dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>