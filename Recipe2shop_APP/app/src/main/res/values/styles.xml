<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style personnalisÃ© pour les cartes -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>
    
    <!-- Style pour le texte des titres -->
    <style name="TextAppearance.Recipe2shoplist.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/text_spacing_medium</item>
    </style>
    
    <!-- Style pour le texte des sous-titres -->
    <style name="TextAppearance.Recipe2shoplist.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/secondary_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/text_spacing_small</item>
    </style>
    
    <!-- Style pour le texte du corps -->
    <style name="TextAppearance.Recipe2shoplist.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_marginBottom">@dimen/text_spacing_small</item>
    </style>
    
    <!-- Style pour les boutons -->
    <style name="Widget.Recipe2shoplist.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- Style pour les boutons secondaires -->
    <style name="Widget.Recipe2shoplist.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Style pour les images circulaires -->
    <style name="CircleImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Style pour les AlertDialog avec boutons blancs -->
    <style name="Recipe2shoplist.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/Widget.Recipe2shoplist.Button.AlertDialog</item>
    </style>

    <!-- Style pour les boutons d'AlertDialog -->
    <style name="Widget.Recipe2shoplist.Button.AlertDialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
