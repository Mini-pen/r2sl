<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recipe2shoplist" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Couleurs principales de la marque -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/secondary_green_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        
        <!-- Couleurs d'accent -->
        <item name="colorAccent">@color/accent_teal</item>
        
        <!-- Couleurs de fond -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Couleurs de texte -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Couleur de la barre de statut -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Personnalisation du thÃ¨me -->
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="Theme.Recipe2shoplist.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Recipe2shoplist.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Recipe2shoplist.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>